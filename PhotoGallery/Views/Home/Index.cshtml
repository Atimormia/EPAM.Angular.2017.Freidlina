<div data-ng-app="myModule">
    <div data-ng-controller="myController">
        <carousel interval="myInterval">
            <slide data-ng-repeat="slide in slides" active="slide.active">
                <img data-ng-src="{{slide.Path}}" style="margin: auto;">
                <div class="carousel-caption">
                    <h4>{{slide.Title}}</h4>
                    <p>{{slide.Summary}}</p>
                </div>
            </slide>
        </carousel>
        <br>
        <div class="row-fluid">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb well c" data-ng-repeat="slide in slides">
                <div class="row">
                    <button class="btn btn-mini" data-ng-class="{'btn-info': !slide.active, 'btn-success': slide.active}" data-ng-disabled="slide.active" data-ng-click="slide.active = true">
                        <img class="img-rounded" data-ng-src="{{slide.Path}}" style="margin: auto; width: 200px">
                    </button>
                </div>
                <div class="row">
                    {{slide.Title}}
                </div>
            </div>
        </div>
    </div>
</div>
<br>
